<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">@dimen/medium</item>
        <item name="android:layout_marginTop">@dimen/medium</item>
        <item name="android:layout_marginEnd">@dimen/normal</item>
    </style>

    <style name="sub_title_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:layout_marginStart">@dimen/medium</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:layout_marginEnd">@dimen/medium</item>
    </style>


    <style name="list_title_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_sub_title_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

</resources>
